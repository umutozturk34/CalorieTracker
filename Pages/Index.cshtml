@page
@model IndexModel
@{
    ViewData["Title"] = "CalorieTracker - Track Your Nutrition";
}

<div class="container">
    <div class="row min-vh-100 align-items-center">
        <div class="col-lg-6 mx-auto text-center">
            <div class="mb-5">
                <i class="bi bi-heart-pulse text-danger" style="font-size: 6rem;"></i>
            </div>
            
            <h1 class="display-3 fw-bold mb-4">CalorieTracker</h1>
            <p class="lead text-muted mb-5">
                Track your daily nutrition, monitor your calories, and achieve your health goals with precision.
            </p>

            <div class="row g-3 justify-content-center mb-5">
                <div class="col-md-4">
                    <div class="card bg-dark border-primary">
                        <div class="card-body">
                            <i class="bi bi-calendar-check text-primary" style="font-size: 2.5rem;"></i>
                            <h5 class="mt-3">Daily Tracking</h5>
                            <p class="text-muted small">Monitor your daily food intake</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-dark border-success">
                        <div class="card-body">
                            <i class="bi bi-search text-success" style="font-size: 2.5rem;"></i>
                            <h5 class="mt-3">Food Database</h5>
                            <p class="text-muted small">Search 300K+ foods</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-dark border-info">
                        <div class="card-body">
                            <i class="bi bi-graph-up text-info" style="font-size: 2.5rem;"></i>
                            <h5 class="mt-3">Track Progress</h5>
                            <p class="text-muted small">Monitor your nutrition goals</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-3 d-sm-flex justify-content-center">
                <a asp-page="/Account/Register" class="btn btn-primary btn-lg px-5">
                    <i class="bi bi-person-plus me-2"></i>Get Started
                </a>
                <a asp-page="/Account/Login" class="btn btn-outline-light btn-lg px-5">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                </a>
            </div>

            <p class="text-muted mt-5 small">
                Start your healthy journey today. It's free!
            </p>
        </div>
    </div>
</div>

<style>
    .min-vh-100 {
        min-height: 80vh;
    }
    
    .card {
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4) !important;
    }
    
    /* Fade in animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes fadeInScale {
        from {
            opacity: 0;
            transform: scale(0.8);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
    
    .display-3 {
        animation: fadeInUp 0.8s ease;
    }
    
    .lead {
        animation: fadeInUp 1s ease;
    }
    
    .card {
        animation: fadeInScale 0.6s ease;
    }
    
    .card:nth-child(1) {
        animation-delay: 0.1s;
    }
    
    .card:nth-child(2) {
        animation-delay: 0.2s;
    }
    
    .card:nth-child(3) {
        animation-delay: 0.3s;
    }
    
    .btn {
        transition: all 0.3s ease;
        animation: fadeInUp 1.2s ease;
    }
    
    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(88, 166, 255, 0.4);
    }
    
    .bi-heart-pulse {
        animation: fadeInScale 1s ease;
    }
    
    /* Icon pulse animation */
    @@keyframes iconPulse {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
    }
    
    .card i {
        transition: transform 0.3s ease;
    }
    
    .card:hover i {
        animation: iconPulse 1s infinite;
    }
</style>
