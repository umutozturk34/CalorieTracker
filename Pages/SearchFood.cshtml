@page
@model CalorieTracker.Pages.SearchFoodModel
@{
    ViewData["Title"] = "Advanced Food Search";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="mb-4">
                <h2>
                    <i class="bi bi-search text-primary"></i> 
                    Advanced Food Search
                </h2>
                <p class="text-muted">
                    Search through 300,000+ foods from the USDA FoodData Central database
                </p>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-warning") alert-dismissible fade show">
            <i class="bi @(Model.IsSuccess ? "bi-check-circle" : "bi-exclamation-triangle")"></i>
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search Form -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-search"></i> Search Foods
            </h5>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="Search">
                <input type="hidden" asp-for="PageNumber" value="1" />
                <div class="row g-3">
                    <div class="col-md-10">
                        <label class="form-label fw-bold">
                            <i class="bi bi-pencil"></i> Food Name or Keywords
                        </label>
                        <input asp-for="SearchQuery" 
                               type="text" 
                               class="form-control form-control-lg" 
                               placeholder="e.g., chicken breast, brown rice, apple, greek yogurt..." 
                               autofocus 
                               required />
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i> 
                            Tip: Use specific terms for better results (e.g., "grilled chicken breast" instead of just "chicken")
                        </small>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100 btn-lg">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Search Results -->
    @if (Model.SearchResults != null && Model.SearchResults.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-list-check"></i> 
                    Search Results (@Model.TotalHits total)
                </h5>
                <span class="badge bg-light text-dark">
                    Page @Model.PageNumber of @Model.TotalPages
                </span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 35%">Food Name</th>
                                <th style="width: 15%">Brand</th>
                                <th style="width: 10%">Type</th>
                                <th style="width: 30%">Nutrition (per 100g)</th>
                                <th style="width: 10%" class="text-center">FDC ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var food in Model.SearchResults)
                            {
                                var calories = food.FoodNutrients?.FirstOrDefault(n => n.NutrientName.Contains("Energy"))?.Value ?? 0;
                                var protein = food.FoodNutrients?.FirstOrDefault(n => n.NutrientName.Contains("Protein"))?.Value ?? 0;
                                var fat = food.FoodNutrients?.FirstOrDefault(n => n.NutrientName.Contains("Total lipid"))?.Value ?? 0;
                                var carb = food.FoodNutrients?.FirstOrDefault(n => n.NutrientName.Contains("Carbohydrate"))?.Value ?? 0;

                                <tr class="food-row">
                                    <td>
                                        <strong>@food.Description</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(food.BrandOwner))
                                        {
                                            <small class="text-muted">@food.BrandOwner</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted fst-italic">Generic</small>
                                        }
                                    </td>
                                    <td>
                                        @if (food.DataType == "Branded")
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-bag"></i> Brand
                                            </span>
                                        }
                                        else if (food.DataType == "Survey (FNDDS)")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-clipboard-data"></i> Survey
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-database"></i> @food.DataType
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex flex-wrap gap-2">
                                            <span class="badge bg-danger">
                                                <i class="bi bi-fire"></i> @calories.ToString("F0") kcal
                                            </span>
                                            <span class="badge bg-success">
                                                <i class="bi bi-egg-fried"></i> P: @protein.ToString("F1")g
                                            </span>
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-droplet"></i> F: @fat.ToString("F1")g
                                            </span>
                                            <span class="badge bg-info">
                                                <i class="bi bi-lightning"></i> C: @carb.ToString("F1")g
                                            </span>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <code class="text-primary">@food.FdcId</code>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Pagination -->
            <div class="card-footer">
                <div class="d-flex justify-content-between align-items-center">
                    <form method="post" asp-page-handler="PreviousPage" class="d-inline">
                        <input type="hidden" asp-for="SearchQuery" />
                        <input type="hidden" asp-for="PageNumber" />
                        <button type="submit" 
                                class="btn btn-outline-primary"
                                disabled="@(Model.PageNumber <= 1)">
                            <i class="bi bi-chevron-left"></i> Previous
                        </button>
                    </form>

                    <span class="text-muted">
                        Showing page <strong>@Model.PageNumber</strong> of <strong>@Model.TotalPages</strong>
                        (@Model.SearchResults.Count items on this page)
                    </span>

                    <form method="post" asp-page-handler="NextPage" class="d-inline">
                        <input type="hidden" asp-for="SearchQuery" />
                        <input type="hidden" asp-for="PageNumber" />
                        <button type="submit" 
                                class="btn btn-outline-primary"
                                disabled="@(Model.PageNumber >= Model.TotalPages)">
                            Next <i class="bi bi-chevron-right"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(Model.SearchQuery))
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-search" style="font-size: 4rem; opacity: 0.3;"></i>
                <h4 class="mt-3 text-muted">No Results Found</h4>
                <p class="text-muted">Try different search terms or check your spelling.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <i class="bi bi-search text-primary" style="font-size: 5rem;"></i>
                <h4 class="mt-4 mb-3">Start Searching</h4>
                <p class="text-muted mb-4">
                    Enter a food name above to search our extensive database
                </p>
                <div class="row g-3 mt-4">
                    <div class="col-md-4">
                        <div class="p-3 border rounded">
                            <i class="bi bi-database text-info" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">300,000+ Foods</h6>
                            <small class="text-muted">Comprehensive database</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3 border rounded">
                            <i class="bi bi-clipboard-data text-success" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Verified Data</h6>
                            <small class="text-muted">USDA FoodData Central</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3 border rounded">
                            <i class="bi bi-speedometer text-warning" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Fast Search</h6>
                            <small class="text-muted">Instant results</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Quick Navigation -->
    <div class="mt-4 text-center">
        <a asp-page="/DailyLog" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to Daily Tracker
        </a>
    </div>
</div>

<style>
    .food-row {
        transition: all 0.2s ease;
    }
    
    .food-row:hover {
        background-color: rgba(88, 166, 255, 0.1);
        transform: translateX(5px);
    }
    
    .card {
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3) !important;
    }
    
    .btn {
        transition: all 0.3s ease;
    }
    
    .btn:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
    
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .alert {
        animation: fadeIn 0.5s ease;
    }
    
    .table tbody tr {
        animation: fadeIn 0.3s ease;
    }
</style>

@section Scripts {
    <script>
        // Add loading state to search button
        document.querySelector('form').addEventListener('submit', function(e) {
            const btn = this.querySelector('button[type="submit"]');
            if (btn && !btn.disabled) {
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Searching...';
            }
        });
    </script>
}
