<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CalorieTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CalorieTracker.styles.css" asp-append-version="true" />
    <style>
        :root {
            --bs-body-bg: #0d1117;
            --bs-body-color: #c9d1d9;
            --bs-card-bg: #161b22;
            --bs-border-color: #30363d;
        }

        body {
            background-color: #0d1117;
            color: #c9d1d9;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            background-color: #161b22 !important;
            border-bottom: 1px solid #30363d;
        }

        .card {
            background-color: #161b22;
            border-color: #30363d;
        }

        .table {
            color: #c9d1d9;
        }

        .table-hover tbody tr:hover {
            background-color: #1c2128;
        }

        .list-group-item {
            background-color: #161b22;
            border-color: #30363d;
            color: #c9d1d9;
        }

        .list-group-item:hover {
            background-color: #1c2128;
        }

        .form-control, .form-select {
            background-color: #0d1117;
            border-color: #30363d;
            color: #c9d1d9;
        }

        .form-control:focus, .form-select:focus {
            background-color: #0d1117;
            border-color: #58a6ff;
            color: #c9d1d9;
        }

        .footer {
            background-color: #161b22;
            border-top: 1px solid #30363d;
            margin-top: auto;
            position: relative;
            z-index: 1;
        }

        .container {
            flex: 1;
            margin-bottom: 2rem;
        }

        .dropdown-menu {
            background-color: #161b22;
            border-color: #30363d;
        }

        .dropdown-item {
            color: #c9d1d9;
        }

        .dropdown-item:hover {
            background-color: #1c2128;
            color: #58a6ff;
        }

        .alert-success {
            background-color: #1a4d2e;
            border-color: #2ea043;
            color: #7ee787;
        }

        .alert-danger {
            background-color: #4d1a1a;
            border-color: #da3633;
            color: #ff7b72;
        }

        .alert-warning {
            background-color: #4d3d1a;
            border-color: #bf8700;
            color: #f0b72f;
        }

        .alert-info {
            background-color: #1a3d4d;
            border-color: #388bfd;
            color: #79c0ff;
        }

        .user-nickname {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.25rem 0.75rem;
            background-color: rgba(88, 166, 255, 0.1);
            border-radius: 1rem;
            color: #58a6ff;
            font-weight: 500;
        }
    </style>
</head>
<body>
    @inject Microsoft.AspNetCore.Identity.UserManager<CalorieTracker.Models.ApplicationUser> UserManager
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="bi bi-heart-pulse text-danger"></i>
                    CalorieTracker
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-page="/DailyLog">
                                    <i class="bi bi-calendar-check text-primary"></i> Daily Tracker
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/SearchFood">
                                    <i class="bi bi-search"></i> Food Search
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var displayName = !string.IsNullOrEmpty(currentUser?.Nickname) 
                                ? currentUser.Nickname 
                                : User.Identity.Name;
                            
                            <li class="nav-item d-flex align-items-center me-3">
                                <span class="user-nickname">
                                    <i class="bi bi-person-circle"></i>
                                    @displayName
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Preferences">
                                    <i class="bi bi-sliders"></i> Preferences
                                </a>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-page="/Account/Logout" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Sign In
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2" asp-page="/Account/Register">
                                    <i class="bi bi-person-plus"></i> Get Started
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            <p class="mb-0">
                &copy; 2025 - CalorieTracker - Track your nutrition for a healthier life
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>