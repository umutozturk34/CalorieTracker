@page
@model CalorieTracker.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "Create Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center py-4">
                    <i class="bi bi-person-plus" style="font-size: 3rem;"></i>
                    <h3 class="mt-2 mb-0">Join CalorieTracker</h3>
                    <p class="mb-0 small">Start your healthy journey today</p>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Registration Failed!</strong>
                            <p class="mb-0 mt-2">@Model.ErrorMessage</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model.Errors != null && Model.Errors.Any())
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle"></i>
                            <strong>Please correct the following errors:</strong>
                            <ul class="mb-0 mt-2">
                                @foreach (var error in Model.Errors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post">
                        <!-- Account Information -->
                        <div class="mb-4">
                            <h5 class="text-muted mb-3">
                                <i class="bi bi-shield-lock"></i> Account Information
                            </h5>
                            
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label">
                                    <i class="bi bi-envelope"></i> Email Address
                                </label>
                                <input asp-for="Input.Email" 
                                       class="form-control form-control-lg" 
                                       placeholder="your.email@example.com"
                                       autofocus />
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.Password" class="form-label">
                                        <i class="bi bi-lock"></i> Password
                                    </label>
                                    <input asp-for="Input.Password" 
                                           type="password" 
                                           class="form-control form-control-lg" 
                                           placeholder="Enter password" />
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.ConfirmPassword" class="form-label">
                                        <i class="bi bi-lock-fill"></i> Confirm Password
                                    </label>
                                    <input asp-for="Input.ConfirmPassword" 
                                           type="password" 
                                           class="form-control form-control-lg" 
                                           placeholder="Confirm password" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Physical Information -->
                        <div class="mb-4">
                            <h5 class="text-muted mb-3">
                                <i class="bi bi-person"></i> Physical Information
                            </h5>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.Height" class="form-label">
                                        <i class="bi bi-rulers"></i> Height (cm)
                                    </label>
                                    <input asp-for="Input.Height" 
                                           type="number" 
                                           step="0.1"
                                           class="form-control form-control-lg" 
                                           placeholder="e.g., 175" />
                                    <span asp-validation-for="Input.Height" class="text-danger small"></span>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.CurrentWeight" class="form-label">
                                        <i class="bi bi-speedometer"></i> Weight (kg)
                                    </label>
                                    <input asp-for="Input.CurrentWeight" 
                                           type="number" 
                                           step="0.1"
                                           class="form-control form-control-lg" 
                                           placeholder="e.g., 70" />
                                    <span asp-validation-for="Input.CurrentWeight" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <small>
                                <strong>Password Requirements:</strong> At least 6 characters with uppercase, lowercase, and number.
                                You can set your daily nutrition goals after registration.
                            </small>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-person-plus"></i> Create Account
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="text-muted mb-0">
                                Already have an account?
                                <a asp-page="/Account/Login" class="text-decoration-none fw-bold">
                                    Sign In
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-page="/Index" class="text-muted text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        transition: transform 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }
    
    .alert {
        animation: slideIn 0.3s ease;
    }
    
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>