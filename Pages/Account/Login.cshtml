@page
@model CalorieTracker.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Sign In";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <i class="bi bi-box-arrow-in-right" style="font-size: 3rem;"></i>
                    <h3 class="mt-2 mb-0">Welcome Back</h3>
                    <p class="mb-0 small">Sign in to continue to CalorieTracker</p>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Login Failed!</strong>
                            <p class="mb-0 mt-2">@Model.ErrorMessage</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle"></i>
                            <strong>Please correct the following errors:</strong>
                            <ul class="mb-0 mt-2">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="bi bi-envelope"></i> Email Address
                            </label>
                            <input asp-for="Input.Email" 
                                   class="form-control form-control-lg" 
                                   placeholder="Enter your email"
                                   autofocus />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="bi bi-lock"></i> Password
                            </label>
                            <input asp-for="Input.Password" 
                                   type="password" 
                                   class="form-control form-control-lg" 
                                   placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>
                        
                        <div class="form-check mb-4">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                Remember me on this device
                            </label>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Sign In
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="text-muted mb-0">
                                Don't have an account?
                                <a asp-page="/Account/Register" class="text-decoration-none fw-bold">
                                    Create Account
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-page="/Index" class="text-muted text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        transition: transform 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(88, 166, 255, 0.25);
    }
    
    .alert {
        animation: slideIn 0.3s ease;
    }
    
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>